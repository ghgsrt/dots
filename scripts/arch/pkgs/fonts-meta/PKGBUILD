         adobe-source-han-mono-cn-fonts
         ttf-lxgw-wenkai
         ttf-lxgw-wenkai-mono
         noto-fonts
         noto-fonts-cjk
         noto-fonts-emoji
         noto-fonts-extra
         ttf-ms-win11-auto
         ttf-ms-win11-auto-zh_cn)

pkgver() {
    date --utc +"%Y.%m.%d"
}
